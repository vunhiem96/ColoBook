<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFF"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/action_bar_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentTop="true">

        <ImageView
                android:id="@+id/back_setting"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_back_setting"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_15sdp" />

        <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/jua_regular"
                android:text="Settings"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_10sdp" />

    </RelativeLayout>
    <View
            android:id="@+id/view"
            android:layout_below="@id/action_bar_setting"
            android:background="#1A000000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>

    <TextView
            android:id="@+id/gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/jua_regular"
            android:text="General"
            android:textColor="#2A3B4C"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
    <RelativeLayout
            android:id="@+id/rl"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_below="@id/gen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp">
        <TextView
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="#000000"
                android:text="Vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp" />
        <TextView
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/jua_regular"
                android:textSize="@dimen/_13ssp"
                android:textColor="#8A2A3B4C"
                android:text="OFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp" />
        <Switch
                android:scaleX="1.1"
                android:scaleY="1"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_15sdp" />

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp">
        <TextView
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="#000000"
                android:text="Sounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp" />
        <TextView
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/jua_regular"
                android:textSize="@dimen/_13ssp"
                android:textColor="#8A2A3B4C"
                android:text="OFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp" />
        <Switch
                android:scaleX="1.1"
                android:scaleY="1"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_15sdp" />

    </RelativeLayout>
    <TextView
            android:id="@+id/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl2"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/jua_regular"
            android:text="Others"
            android:textColor="#2A3B4C"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/other"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#000000"
                    android:text="Rate and Review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp" />
            <ImageView
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_settingss"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp" />
            
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">

            <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="Share"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />
            <ImageView
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_settingss"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp" />

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/txt_checkupdate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#000000"
                    android:text="Check for update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp" />
            <ImageView
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_settingss"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp" />

        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#000000"
                    android:text="Our policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp" />
            <ImageView
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_settingss"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp" />

        </RelativeLayout>

    </LinearLayout>

