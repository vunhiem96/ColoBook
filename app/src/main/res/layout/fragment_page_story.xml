<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".fragment.PageStoryFragment">

    <RelativeLayout
            android:id="@+id/action_bar_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

        <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                app:srcCompat="@drawable/ic_back_setting" />

        <TextView
                android:id="@+id/name_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/jua_regular"
                android:text="Aladdin"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
        <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_giftbox" />

    </RelativeLayout>

    <TextView
            android:layout_margin="@dimen/_1sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="ADS"
            android:id="@+id/ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" />

    <com.tmall.ultraviewpager.UltraViewPager
            android:id="@+id/ultraViewPager_story"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="8.4" />

    <RelativeLayout
           android:id="@+id/btn_to_edit"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/round_bg_bedtime2">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_paint" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="COLOR THIS PICTURE"
                android:textColor="#FFFF"
                android:textSize="@dimen/_12ssp" />
    </RelativeLayout>

</LinearLayout>