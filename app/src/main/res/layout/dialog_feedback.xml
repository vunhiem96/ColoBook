<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tranparent"
                android:theme="@style/NewDialog">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/background_gradient_border"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
                app:srcCompat="@drawable/feedback"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/tim_than"
                android:layout_marginBottom="@dimen/_15sdp"
                android:text="@string/feed_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/ed_text_feedback"
                android:hint="@string/content_feedback"
                android:textColor="@color/tim_than"
                android:textSize="@dimen/_12sdp"
                android:textColorHint="@color/tim_than"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_15sdp"
                android:singleLine="true"
                android:layout_height="wrap_content"/>

        <RelativeLayout
                android:id="@+id/layout_send_feedback"
                android:background="@drawable/border_save_button"
                android:layout_width="match_parent"
                android:padding="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/txt1"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="@string/send_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView android:layout_width="@dimen/_20sdp"
                       android:layout_toLeftOf="@+id/txt1"
                       app:srcCompat="@drawable/ic_fb_send" android:scaleType="fitXY"
                       android:layout_height="@dimen/_20sdp"/>

        </RelativeLayout>
    </LinearLayout>

    <ImageView
            android:scaleType="fitXY"
            android:id="@+id/btn_close_dialog"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_exit"/>

</RelativeLayout>